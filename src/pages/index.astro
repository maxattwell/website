---
import Layout from '../layouts/Layout.astro';
import ScrollAnimation from '../components/ScrollAnimation.jsx';
---

<Layout title="Lenis Scroll Animation - Astro">
  <main>
    <h1>Lenis Scroll Demo</h1>
    <ScrollAnimation client:load />
  </main>
</Layout>

<style>
  main {
    min-height: 300vh;
  }

  :global(.scroll-container) {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  :global(.spacer) {
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24px;
  }

  :global(.animated-section) {
    height: 80vh;
    width: 80%;
    background-color: #3498db;
    color: white;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 2rem;
    border-radius: 10px;
    opacity: 0;
    transform: scale(0.8);
    transition: transform 0.1s ease, opacity 0.1s ease;
  }

  :global(.animated-section h2) {
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  :global(.animated-section p) {
    font-size: 1.2rem;
  }
</style>
