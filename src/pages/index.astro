---
import Layout from '../layouts/Layout.astro';
import ScrollAnimation from '../components/ScrollAnimation.jsx';
import SmoothScroll from '../components/SmoothScroll.jsx';
---

<Layout title="Fixed Hero with Color Fade">
  <SmoothScroll client:load>
    <ScrollAnimation client:load />
  </SmoothScroll>
</Layout>

<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap');
  
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  
  body {
    font-family: 'Inter', sans-serif;
    line-height: 1.6;
  }

  .scroll-container {
    width: 100%;
  }
  
  .hero-section {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    overflow: hidden;
  }
  
  .image-container {
    position: relative;
    width: 100%;
    height: 100%;
  }
  
  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .color-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #3498db;
    opacity: 0;
    transition: opacity 0.1s ease;
  }
  
  .hero-content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    color: white;
    z-index: 10;
  }
  
  .hero-content h1 {
    font-size: 4rem;
    margin-bottom: 1rem;
    text-shadow: 0 2px 8px rgba(0,0,0,0.7);
    font-weight: 700;
  }
  
  .hero-content p {
    font-size: 1.25rem;
    text-shadow: 0 2px 4px rgba(0,0,0,0.7);
  }

  .content-section {
    position: relative;
    z-index: 5;
    margin-top: 100vh; /* Start content below the hero */
    background-color: white;
    min-height: 200vh; /* Make sure there's enough content to scroll */
  }

  .scrolling-content {
    max-width: 800px;
    margin: 0 auto;
    padding: 4rem 2rem;
  }

  .scrolling-content h2 {
    font-size: 2.5rem;
    margin-bottom: 2rem;
    color: #333;
  }

  .scrolling-content p {
    font-size: 1.1rem;
    margin-bottom: 1.5rem;
    color: #666;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .hero-content h1 {
      font-size: 2.5rem;
    }

    .hero-content p {
      font-size: 1rem;
    }

    .scrolling-content {
      padding: 2rem 1rem;
    }

    .scrolling-content h2 {
      font-size: 2rem;
    }
  }
</style>
