---
import Layout from '../layouts/Layout.astro';
import ScrollAnimation from '../components/ScrollAnimation.jsx';
import SmoothScroll from '../components/SmoothScroll.jsx';
---

<Layout title="Zoom Out Effect">
  <SmoothScroll client:load>
    <ScrollAnimation client:load />
  </SmoothScroll>
</Layout>

<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap');
  
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  
  body {
    font-family: 'Inter', sans-serif;
    line-height: 1.6;
    overflow-x: hidden;
  }

  .scroll-container {
    width: 100%;
  }
  
  .hero-section {
    position: sticky;
    top: 0;
    width: 100%;
    height: 100vh;
    overflow: hidden;
  }
  
  .image-container {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
  }
  
  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .color-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #3498db;
    opacity: 0;
    transition: opacity 0.1s ease;
  }
  
  .text-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
    overflow: hidden;
  }
  
  .zoom-text {
    text-align: center;
    color: white;
    transform-origin: center center;
    opacity: 0;
    transition: transform 0.1s ease, opacity 0.1s ease;
  }

  .zoom-text h1 {
    font-size: 8rem;
    margin-bottom: 2rem;
    text-shadow: 0 2px 8px rgba(0,0,0,0.7);
    font-weight: 700;
    white-space: nowrap;
  }

  .zoom-text p {
    font-size: 2rem;
    text-shadow: 0 2px 4px rgba(0,0,0,0.7);
    white-space: nowrap;
  }

  .content-section {
    position: relative;
    z-index: 5;
    height: 200vh; /* Make this tall enough to allow the zoom effect to complete */
    background-color: transparent;
  }

  .scrolling-content {
    max-width: 800px;
    margin: 0 auto;
    padding: 4rem 2rem;
    padding-top: 50vh; /* Push content down so it appears after zoom completes */
    background-color: transparent;
  }

  .scrolling-content h2 {
    font-size: 2.5rem;
    margin-bottom: 2rem;
    color: #333;
  }

  .scrolling-content p {
    font-size: 1.1rem;
    margin-bottom: 1.5rem;
    color: #666;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .zoom-text h1 {
      font-size: 4rem;
    }

    .zoom-text p {
      font-size: 1.5rem;
    }

    .scrolling-content {
      padding: 2rem 1rem;
    }

    .scrolling-content h2 {
      font-size: 2rem;
    }
  }

  .background-circle {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 200px;
    height: 200px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.1);
    border: 2px solid rgba(255, 255, 255, 0.3);
    transform-origin: center center;
    pointer-events: none;
    opacity: 0;
  }

  .zoom-title {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) scale(8);
    transform-origin: center center;
    color: white;
    font-size: 8rem;
    font-weight: 900;
    text-shadow: 0 4px 20px rgba(0,0,0,0.8);
    opacity: 0;
    white-space: nowrap;
    letter-spacing: 0.5rem;
  }

  .zoom-subtitle {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) scale(4);
    transform-origin: center center;
    color: white;
    font-size: 2rem;
    text-shadow: 0 2px 10px rgba(0,0,0,0.7);
    opacity: 0;
    margin-top: 6rem;
    white-space: nowrap;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .zoom-title {
      font-size: 4rem;
      letter-spacing: 0.2rem;
    }

    .zoom-subtitle {
      font-size: 1.5rem;
      margin-top: 4rem;
    }
  }
</style>
