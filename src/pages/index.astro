---
import Layout from '../layouts/Layout.astro';
import MainPortfolio from '../components/MainPortfolio.jsx';
import SmoothScroll from '../components/SmoothScroll.jsx';
---

<Layout title="Image-Masked Text Zoom">
  <SmoothScroll client:load>
    <MainPortfolio client:load />
  </SmoothScroll>
</Layout>

<style is:global>
@import url('https://fonts.googleapis.com/css2?family=Pirata+One&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Poppins=swap');
  
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  
  body {
    font-family: "Poppins", system-ui;
    line-height: 1.6;
    overflow-x: hidden;
  }

  .magic-hover-padding {
    padding: 10px;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .project-media {
      justify-content: center;
    }
    
    .right-content {
      width: 90%;
    }
  }
</style>
