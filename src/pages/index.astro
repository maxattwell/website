---
import Layout from '../layouts/Layout.astro';
import ScrollAnimation from '../components/ScrollAnimation.jsx';
import SmoothScroll from '../components/SmoothScroll.jsx';
---

<Layout title="Image-Masked Text Zoom">
  <SmoothScroll client:load>
    <ScrollAnimation client:load />
  </SmoothScroll>
</Layout>

<style is:global>
@import url('https://fonts.googleapis.com/css2?family=Pirata+One&display=swap');
  
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  
  body {
    font-family: "Pirata One", system-ui;
    line-height: 1.6;
    overflow-x: hidden;
  }

  .scroll-container {
    height: 3500px;
    overflow-x: hidden;
    background-color: #282828;
  }

  .hero-section {
    position: fixed;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    top: 0;
    left: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .background-image {
    position: absolute;
    width: 100%;
    height: 100%;
    background-image: url('/src/assets/running-header.webp');
    background-size: cover;
    background-position: center;
    z-index: 1;
  }

  .hero-text-color {
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: #fbf1c7;
    z-index: 2;
  }

  .foreground-layer {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 3;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .text-mask-svg {
    transform-origin: center center;
    width: 100vw;
    height: 100vh;
  }

  .scrolling-content {
    padding: 2rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .projects-section {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background-color: #282828;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
    opacity: 1;
    transition: none;
  }

  .projects-section h2 {
    font-size: clamp(3rem, 8vw, 8rem);
    z-index: 2;
    color: #fbf1c7;
    font-weight: 600;
  }

  .project-section {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
  }

  .project-content {
    width: 90%;
    max-width: 1200px;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .project-title {
    font-size: clamp(2rem, 6vw, 6rem);
    color: #fbf1c7;
    font-weight: 600;
    opacity: 0;
  }

  .project-media {
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  .project-image-container {
    flex: 1;
    opacity: 0;
  }

  .project-image {
    width: 100%;
    height: auto;
    max-height: 400px;
    object-fit: cover;
    border-radius: 8px;
  }

  .project-paragraph {
    flex: 1;
    font-size: clamp(1rem, 2vw, 1.5rem);
    line-height: 1.6;
    color: #333;
    opacity: 0;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .project-media {
      flex-direction: column;
    }
  }
</style>
